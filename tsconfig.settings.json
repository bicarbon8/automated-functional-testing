{
    "compilerOptions": {
        /* Basic Options */
        "target": "es6",
        "module": "commonjs",
        "lib": ["es5", "dom", "scripthost", "es2018.promise", "ES2020"],
        "sourceMap": true,

        /* Module Resolution Options */
        "moduleResolution": "node",

        /* Advanced Options */
        "resolveJsonModule": true,
        "noEmit": false,
        "declaration": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "noImplicitOverride": true
    }
}